<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="CebToolkit.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CebToolkit"
    Title="Compte est bon"
    FlyoutHeight="200"
    FlyoutBackgroundColor="DarkSlateGrey"
    FlyoutBackgroundImageAspect="AspectFill">
   
    <ShellContent
        Icon="favicon.ico"
        Title="Le compte est bon"
        ContentTemplate="{DataTemplate local:CebPage}"
        
        Route="Ceb" />

    <ShellContent
        Icon="appicon.png"
        Route="Config"
        Title="⚙️ Configuration"
        ContentTemplate="{DataTemplate local:ConfigPage}" />
    <MenuItem Text="❌ Quitter" Clicked="MenuItem_OnClicked"></MenuItem>
</Shell>