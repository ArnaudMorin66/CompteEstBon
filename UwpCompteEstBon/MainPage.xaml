<Page
    x:Class="UwpCompteEstBon.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UwpCompteEstBon"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sf="using:Syncfusion.UI.Xaml.Grid"
    xmlns:sfi="using:Syncfusion.UI.Xaml.Controls.Input"
    xmlns:sfn="using:Syncfusion.UI.Xaml.Controls.Notification"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="CebDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="SfComboboxStyle" TargetType="sfi:SfComboBox">
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="BorderThickness" Value="0" />
            </Style>
            <Style x:Key="SfGridHeaderCell" TargetType="sf:GridHeaderCellControl">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1.0">
                            <GradientStop Offset="0" Color="Navy" />
                            <GradientStop Offset="1" Color="Black" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground" Value="White" />
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Page.DataContext>
        <local:ViewTirage x:Name="bindTirage" />
    </Page.DataContext>

    <Grid
        x:Name="Grid"
        x:FieldModifier="public"
        Background="CornflowerBlue">
        <Grid.Resources />
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="1" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="2" />
        </Grid.ColumnDefinitions>
        <Border
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="Black" />
                    <GradientStop Offset="1" Color="Navy" />
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock
                VerticalAlignment="Stretch"
                FontSize="32"
                FontWeight="Bold"
                Foreground="AliceBlue"
                TextAlignment="Center">
                <TextBlock.Text>Jeu du compte est bon</TextBlock.Text>
            </TextBlock>
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Style="{StaticResource BorderTitreStyle}">
            <TextBlock Style="{StaticResource TextBoxTitreStyle}">Plaques</TextBlock>
        </Border>
        <sfi:SfComboBox
            Grid.Row="1"
            Grid.Column="2"
            ItemsSource="{Binding ListePlaques}"
            SelectedValue="{Binding Plaques[0], Mode=TwoWay}"
            Style="{StaticResource SfComboboxStyle}" />
        <sfi:SfComboBox
            Grid.Row="1"
            Grid.Column="3"
            ItemsSource="{Binding ListePlaques}"
            SelectedValue="{Binding Plaques[1], Mode=TwoWay}"
            Style="{StaticResource SfComboboxStyle}" />
        <sfi:SfComboBox
            Grid.Row="1"
            Grid.Column="4"
            ItemsSource="{Binding ListePlaques}"
            SelectedValue="{Binding Plaques[2], Mode=TwoWay}"
            Style="{StaticResource SfComboboxStyle}" />
        <sfi:SfComboBox
            Grid.Row="1"
            Grid.Column="5"
            ItemsSource="{Binding ListePlaques}"
            SelectedValue="{Binding Plaques[3], Mode=TwoWay}"
            Style="{StaticResource SfComboboxStyle}" />
        <sfi:SfComboBox
            Grid.Row="1"
            Grid.Column="6"
            ItemsSource="{Binding ListePlaques}"
            SelectedValue="{Binding Plaques[4], Mode=TwoWay}"
            Style="{StaticResource SfComboboxStyle}" />
        <sfi:SfComboBox
            Grid.Row="1"
            Grid.Column="7"
            ItemsSource="{Binding ListePlaques}"
            SelectedValue="{Binding Plaques[5], Mode=TwoWay}"
            Style="{StaticResource SfComboboxStyle}" />
        <Border
            Grid.Row="1"
            Grid.Column="8"
            Grid.ColumnSpan="1"
            Style="{StaticResource BorderTitreStyle}">
            <TextBlock Style="{StaticResource TextBoxTitreStyle}" Text="Cherche" />
        </Border>
        <sfi:SfNumericUpDown
            Grid.Row="1"
            Grid.Column="9"
            Grid.ColumnSpan="2"
            VerticalAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            Background="#FF9EB9EB"
            BorderThickness="0"
            FormatString="{}0"
            Maximum="999"
            MaximumNumberDecimalDigits="0"
            Minimum="0"
            SpinButtonsAlignment="Right"
            TextAlignment="Center"
            Value="{Binding Search, Mode=TwoWay}" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Background="{Binding Background}"
            Command="{Binding HasardCommand}"
            Foreground="{Binding Foreground}"
            KeyboardAcceleratorPlacementMode="Auto"
            Style="{StaticResource CebButtonStyle}"
            ToolTipService.ToolTip="Raccourci: Ctrl+H">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="H" Modifiers="Control" />
            </Button.KeyboardAccelerators>
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Margin="5" Symbol="Shuffle" />
                    <TextBlock Margin="5" Text=" Hasard" />
                </StackPanel>
            </Button.Content>
        </Button>
        <Button
            Grid.Row="2"
            Grid.Column="5"
            Grid.ColumnSpan="4"
            Background="{Binding Background}"
            Command="{Binding ResolveCommand}"
            Foreground="{Binding Foreground}"
            Style="{StaticResource CebButtonStyle}"
            ToolTipService.ToolTip="Raccourci: Ctrl+R">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="R" Modifiers="Control" />
            </Button.KeyboardAccelerators>
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Margin="5" Symbol="Play" />
                    <TextBlock Margin="5" Text="{Binding Result}" />
                </StackPanel>
            </Button.Content>
        </Button>
        <Button
            x:Name="ExportExcel"
            Grid.Row="2"
            Grid.Column="9"
            Grid.ColumnSpan="2"
            Background="{Binding Background}"
            Command="{Binding ExportCommand}"
            CommandParameter="{Binding ElementName=SolutionsData}"
            Foreground="{Binding Foreground}"
            Style="{StaticResource CebButtonStyle}"
            ToolTipService.ToolTip="Raccourci: Ctrl+X">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="X" Modifiers="Control" />
            </Button.KeyboardAccelerators>
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Margin="5" Symbol="Save" />
                    <TextBlock Margin="5" Text="Excel" />
                </StackPanel>
            </Button.Content>

        </Button>
        <Grid
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="10"
            Margin="0,0,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{Binding Background}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <sfn:SfBusyIndicator
                Grid.Column="0"
                VerticalAlignment="Stretch"
                AnimationSpeed="300"
                AnimationType="Box"
                Foreground="White"
                IsBusy="{Binding IsBusy}"
                ViewboxHeight="20"
                ViewboxWidth="20"
                Visibility="{Binding Visibility}" />
            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="18"
                FontWeight="Bold"
                Foreground="White"
                TextAlignment="Center">
                <Run Text="Nombre de solutions: " />
                <Run Text="{Binding Solutions.Count, Mode=OneWay}" />
            </TextBlock>
            <TextBlock
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="18"
                FontWeight="Bold"
                Foreground="White"
                TextAlignment="Center">
                <Run FontFamily="Segoe UI" Text="Durée: " />
                <Run Text="{Binding Duree, Mode=OneWay}" />
                <Run Text=" s" />
            </TextBlock>
        </Grid>
        <sf:SfDataGrid
            x:Name="SolutionsData"
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="10"
            x:FieldModifier="public"
            AllowFiltering="False"
            AllowGrouping="False"
            AllowSorting="False"
            AutoGenerateColumns="False"
            Background="White"
            BorderBrush="Black"
            ColumnSizer="Star"
            CurrentCellBorderBrush="Navy"
            FontSize="14"
            HeaderStyle="{StaticResource SfGridHeaderCell}"
            ItemsSource="{Binding Solutions}"
            NavigationMode="Cell"
            RowSelectionBrush="LightBlue"
            SelectionForegroundBrush="Navy">
            <sf:SfDataGrid.Columns>
                <sf:GridTextColumn
                    HeaderText="Opération 1"
                    MappingName="op1"
                    TextAlignment="Center" />
                <sf:GridTextColumn
                    HeaderText="Opération 2"
                    MappingName="op2"
                    TextAlignment="Center" />
                <sf:GridTextColumn
                    HeaderText="Opération 3"
                    MappingName="op3"
                    TextAlignment="Center" />
                <sf:GridTextColumn
                    HeaderText="Opération 4"
                    MappingName="op4"
                    TextAlignment="Center" />
                <sf:GridTextColumn
                    HeaderText="Opération 5"
                    MappingName="op5"
                    TextAlignment="Center" />
            </sf:SfDataGrid.Columns>
        </sf:SfDataGrid>
    </Grid>
</Page>
